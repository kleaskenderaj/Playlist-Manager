<% if @playlist.errors.any? %>
    <h2>The following errors prevented the playlist from bring saved!</h2>
    <ul>
    <% @playlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_with(model: @playlist, local: true) do |f| %>

<p> 
    <%= f.label :title %><br>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
</p>

<p>
<% if logged_in? %>

    <%= f.label :device_id, "Add to a device" %><br><br>
    <%= f.collection_select :device_id, current_user.devices, :id, :name, { prompt: "Select a device" } %>
    
<% end %>
</p>

<p> 
  <%= f.collection_check_boxes(:medium_ids, Medium.all, :id, :title, { :multiple => true, :size => 5 }) %>
</p>


<p>
    <%= f.submit %>
</p>

<% end %>