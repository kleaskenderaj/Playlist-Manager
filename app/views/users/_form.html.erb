<% if @user.errors.any? %>
    <h2>The following errors prevented you from being signed up!</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>

<p> 
    <%= f.label :username %><br>
    <%= f.text_field :username %>
</p>

<p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
</p>

<p> 
    <%= f.label :password %><br>
    <%= f.password_field :password %>
</p>

<p>
    Device&nbsp;<%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
</p>


<p>
    <%= f.label :device_unique_identifier %> <br>
    <%= f.text_area :unique_identifier, value: SecureRandom.hex(10) %> 
</p> 

<p>
    <%= f.submit(@user.new_record? ? "Sign up" : "Update account") %>
</p>

<% end %>