<div style="background-color: rgba(255, 255, 255, 0.8); padding: 20px;"> 
<h1>Add a new Device</h1>

<% if @device.errors.any? %>
    <h2>The following errors prevented the device from being saved:</h2>
        <ul>
            <% @device.errors.full_messages.each do |msg|%>
                <li><%= msg%></li>
            <% end %>
        </ul>
<% end %>


<%= form_with(model: @device, local: true) do |f| %>

    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :unique_identifier %> <br>
        <%= f.text_area :unique_identifier, value: SecureRandom.hex(10) %> 
    </p> 

    <p>
        <%= f.submit %>
    </p>

<% end %>
<%= button_to "Return to Devices", devices_path, method: :get %>
</div>